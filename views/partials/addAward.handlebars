<select name="best_picture" id="" required>
	<option disabled selected value>Select best picture</option>
	{{#each movieList}}
		<option>{{{this.movieTitle}}}</option>
	{{/each}}
</select><br><br>

<select name="lead_actor" id="" required>
	<option disabled selected value>Select lead actor</option>
	{{#each actorList}}
		<option>{{{this.actor}}}</option>
	{{/each}}
</select><br><br>

<select name="lead_actress" id="" required>
	<option disabled selected value>Select lead actress</option>
	{{#each actorList}}
		<option>{{{this.actor}}}</option>
	{{/each}}
</select><br><br>
