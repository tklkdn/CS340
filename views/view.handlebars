<h1>{{tableTitle}}</h1>
<table border="1" class="{{firstCol}}">
  <tbody>
    <tr>
	  {{#each colList}}
        <th>{{this}}</th>
	  {{/each}}
	  <th></th>
	  <th></th>
    </tr>
	{{#each dataList}}
      <tr>
        {{#each this}}
		  <td>{{this}}</td>
		{{/each}}
	    <td><a href="/update?table={{../table}}&ID={{this.ID}}">Edit</a></td>
	    <td><a href="#" onclick="confirmDel()">Delete</a></td>
	  </tr>
	{{/each}}
  </tbody>
</table>
<p><a href='/add?table={{table}}'>Add Row</a></p>
<br><br><br>

<script>
  var confirmDel = () => {
    if (confirm("Are you sure you would like to delete this item?")) {
	  console.log("Item deleted");
	} else {
	  console.log("Item not deleted");
	}
  };
</script>	